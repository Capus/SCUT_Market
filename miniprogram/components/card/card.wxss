.between{
  height: 10px;
  background-color: rgb(224, 221, 221);
  border-top: 1rpx solid rgb(141, 139, 139);
  
}
.market-card{
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: rgb(255, 255, 255);

}
.market-card-main{
display: flex;
  flex-direction: column;
 
}
.market-card-title{

  font-weight: bold;
  font-size:medium;
}
.market-card-dj{
  font-weight:100;
  font-size:x-small;
}
.market-card-description{
  font-size:smaller;
  display: -webkit-box;
  word-break: break-all;
   /*超出文字用省略号代替*/
  text-overflow: ellipsis; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3 ;
  overflow: hidden;

}
.market-card-image{
  flex-direction: row
}
.market-card-one-image{
  margin-left: 20rpx; 
  height: 200rpx;
  width: 300rpx;
}
.market-card-many-images{
  margin-left: 20rpx; 
  height: 200rpx;
  width: 200rpx;
}
.market-card-pd{
  display: flex;
  justify-content: space-between;
  font-size:smaller;
}
.market-card-price{
  color: rgb(54, 164, 253);
  margin-left: 20rpx;
}
.market-card-date{
  color: rgb(122, 139, 153);
  margin-right: 30rpx;
}
.market-card-divLine{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background: rgb(218, 219, 216);
  margin-left: 2.5%;
  width: 95%;
  height: 3rpx;
}
.market-card-comment{

  margin-left: 20rpx;
  color: gray;
  font-size:small;
  margin-bottom: 5rpx;
}
.comments-acronym{
  color: rgb(51, 186, 248);
}