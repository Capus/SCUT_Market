/* components/Title/Title.wxss */

.Title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  font-size: 28rpx;
}

.searchBox {
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  width: 70vw;
}

.searchIcon {
  width: 35rpx;
  padding: 10rpx 10rpx;
}

.searchText {
  width: 60vw;
  display: flex;
  justify-content: center;
  color: #a39f9f;
}

.area {
  width: 30vw;
  display: flex;
  justify-content: center;
 
}

.areaBorder {
  padding: 5rpx;
  border-radius: 15rpx;
  border: 1px solid black;
   background-color: #ffd45d;
}
