.detailContainer {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
} 

.title{
  font-weight: bold; 
  font-size: 50rpx;
  display: block;
}

.businessWay{
  font-weight: bold; 
  font-size: 35rpx;
  color: grey;
  margin-top: 20rpx;
  display: block;
}

.body{
  font-size: 35rpx;
  margin-top: 20rpx;
  display: block;
}

.contact{
  font-size: 35rpx;
  margin-top: 20rpx;
  display: block;
}

.date{
  font-size: 25rpx;
  margin-top: 20rpx;
  display: block;
  color: grey;
}

