/* pages/search/search.wxss */
.areaTitle{
 padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
 color: rgb(238, 119, 119);
}
.areaTitle image{
 width:25rpx;
}

.searchBox {
  
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.input{
  border-radius: 8px;
  height: 55rpx;
  margin-left: 3vw;
  font-size: 35rpx;
  text-align: center;
  background-color: #f5f5f5;
  width: 75vw;
}
.input.active{
  border-bottom: 1rpx solid #666666;
}
.searchButton{
  display: flex;
  align-items: center;
  height: 60rpx;
  font-size: 28rpx;
  border: 1px solid #666666;
}
.searchButton.active{
  background-color: #ffd45d
}



